<p id="notice"><%= notice %></p>

<h1>Start Learning</h1>

<div class="container container-fluid" id="productCon">
  <% @products.each_slice(3) do |slice| %>
      <div class="row">
            

              <% slice.each do |product| %>
              
                  <div class="col-md-4">
                      <div class="card">
                            <div class="card-body">
                              <table>
                                <thead>
                                  <tr>
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th>Price</th>
                                    <th>Productid</th>
                                    <th colspan="3"></th>
                                  </tr>
                                </thead>

                                <tbody>
                                  
                                    <tr>
                                      <td><%= product.title %></td>
                                      <td><%= product.description %></td>
                                      <td><%= product.price %></td>
                                      <td><%= product.productid %></td>
                                      <td><%= link_to 'Show', product %></td>
                                      <td><%= link_to 'Edit', edit_product_path(product) %></td>
                                      <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                                    </tr>
                                  
                                </tbody>
                              </table>
                            </div>
                        </div>
                      </div>
                    
                <% end %>
                    
      
           
        </div>
      <% end %>

 </div>   



<br>

