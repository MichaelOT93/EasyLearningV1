

<div class="container">
  <div class="row"
    <div class="col-md-8">
      <div class="card">
        <div class="card-title">
          <h5>
            <%= @product.title %>
          </h5>
        </div>
        <div class="card-body">
          <%= @product.description %>
        </div>
        <div class="card-footer">
        <h6>Price:</h6>
          <%= @product.price %>
        </div>
      </div>
    </div>
  </div>
</div>
  

<p id="notice"><%= notice %></p>


<p>
  <strong>Productid:</strong>
  <%= @product.productid %>
</p>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
